<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %> </p>
        <hr>
        <form action="/responder" method="post">
            <h3>Responda</h3>
            <label for="corpo">Resposta:</label> <br> <br>
            <textarea name="corpo" id="corpo" placeholder="Digite a sua resposta" class="form-control"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>"> <br> 
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta=>{ %>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p> 
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include('partials/footer.ejs') %>